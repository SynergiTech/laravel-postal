{
    "name": "synergitech/laravel-postal",
    "description": "This library integrates Postal with the standard Laravel 5 mail framework.",
    "keywords": [
        "Laravel",
        "Postal",
        "Email"
    ],
    "homepage": "https://github.com/synergitech/laravel-postal",
    "license": "MIT",
    "require": {
        "php": "^7.3|^8.0",
        "laravel/framework": "^6.0|^7.0|^8.0",
        "postal/postal": "^1.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "orchestra/testbench": "^4.0|^5.1|^6.0"
    },
    "autoload": {
        "psr-4": {
            "SynergiTech\\Postal\\": "src",
            "SynergiTech\\Postal\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SynergiTech\\Postal\\PostalServiceProvider"
            ]
        }
    }
}
